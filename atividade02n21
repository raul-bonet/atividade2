let primo = Number(prompt("Escreva um número e direi se ele é primo ou não"));

if (primo > 1) {
    let isPrimo = true; // Assume que o número é primo

    for (let i = 2; i <= Math.sqrt(primo); i++) {
        if (primo % i === 0) {
            isPrimo = false; // Se encontrar um divisor, não é primo
            break; // Não precisa continuar verificando
        }
    }

    if (isPrimo) {
        console.log("O número é primo");
    } else {
        console.log("O número não é primo");
    }
} else {
    console.log("O número não é primo");
}
